@model ShoppingCartViewModel

<div class="col-sm-12 col-md-12 col-lg-12">
    <h2>Shopping Cart</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="text-center" colspan="3">Selected Amount</th>
                <th class="text-center">Product</th>
                <th class="text-center">Price</th>
                <th class="text-center">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-center">
                        <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-productId="@item.Product.ProductId">-</a>
                    </td>
                    <td class="text-center">@item.Amount</td>
                    <td class="text-center">
                        <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="IncreaseAmount" asp-route-productId="@item.Product.ProductId">+</a>
                    </td>
                    <td class="text-left">@item.Product.Name</td>
                    <td class="text-right">@item.Product.Price.ToString("c")</td>
                    <td class="text-right">
                        @((item.Amount * item.Product.Price).ToString("c"))
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" class="text-right">Total</td>
                <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
            </tr>
        </tfoot>
    </table>
    <div class="text-center">
        <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="ClearCart">Clear Cart</a>
        <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
    </div>
</div>