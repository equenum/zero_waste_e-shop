@model Order

<form asp-action="Checkout" method="post" role="form">
    <h4>You are one step away from completing your order!</h4>
    <div class="form-group">
        <label asp-for="FirstName" class="col-md-6 control-label" >First Name</label>
        <div class="col-md-5">
            <input asp-for="FirstName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-md-6 control-label">Last Name</label> 
        <div class="col-md-5">
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-md-6 control-label">Address</label> 
        <div class="col-md-5">
            <input asp-for="Address" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="City" class="col-md-6 control-label">City</label> 
        <div class="col-md-5">
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="State" class="col-md-6 control-label">State</label> 
        <div class="col-md-5">
            <input asp-for="State" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ZipCode" class="col-md-6 control-label">Zip Code</label> 
        <div class="col-md-5">
            <input asp-for="ZipCode" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-6 control-label">Phone Number</label> 
        <div class="col-md-5">
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Complete Order" />
        </div>
    </div>
</form>